<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>com.wonder.freemacinput.FreeMacInput</id>
    <name>FreeMacInput</name>
    <vendor>Wonder</vendor>
    <description><![CDATA[<h2>FreeMacInput - Intelligent Input Method Switcher</h2><p>Automatically switches input method based on editing context. Supports comments, strings, code, and more. Improves coding efficiency for bilingual developers.</p>]]></description>
    <change-notes><![CDATA[Initial release with smart context detection for input method switching.]]></change-notes>
    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <!-- 主配置页面（空页面） -->
        <applicationConfigurable 
            parentId="tools" 
            id="FreeMacInput" 
            displayName="FreeMacInput"
            instance="com.wonder.freemacinput.freemacinput.config.RootConfigurable"/>
        
        <!-- 子配置页面 -->
        <applicationConfigurable 
            parentId="FreeMacInput" 
            id="FreeMacInput.BasicSettings" 
            displayName="基本设置"
            instance="com.wonder.freemacinput.freemacinput.config.BasicSettingsConfigurable"/>
        
        <applicationConfigurable 
            parentId="FreeMacInput" 
            id="FreeMacInput.DefaultScene" 
            displayName="默认场景"
            instance="com.wonder.freemacinput.freemacinput.config.DefaultSceneConfigurable"/>
        
        <applicationConfigurable 
            parentId="FreeMacInput" 
            id="FreeMacInput.CommentScene" 
            displayName="注释场景"
            instance="com.wonder.freemacinput.freemacinput.config.CommentSceneConfigurable"/>
        
        <applicationConfigurable 
            parentId="FreeMacInput" 
            id="FreeMacInput.StringScene" 
            displayName="字符串场景"
            instance="com.wonder.freemacinput.freemacinput.config.StringSceneConfigurable"/>
        
        <applicationConfigurable 
            parentId="FreeMacInput" 
            id="FreeMacInput.ToolWindowScene" 
            displayName="工具窗口场景"
            instance="com.wonder.freemacinput.freemacinput.config.ToolWindowSceneConfigurable"/>
        
        <applicationService serviceImplementation="com.wonder.freemacinput.freemacinput.config.SettingsState"/>
        <postStartupActivity implementation="com.wonder.freemacinput.freemacinput.StartupActivity"/>
    </extensions>
</idea-plugin>
